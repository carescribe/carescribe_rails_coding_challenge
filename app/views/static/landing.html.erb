<div class="bg-white">
  <div class="max-w-7xl mx-auto text-center py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
      <span class="block">CareScribe</span>
    </h2>
    <h2 class="mt-5 text-lg font-semibold tracking-tight text-gray-900 sm:text-2xl">
      <span class="block">Welcome to the CareScribe Rails coding challenge</span>
    </h2>
    <% if current_user %>
      <div class="mt-8 flex justify-center">
        <div class="inline-flex rounded-md shadow">
          <%= link_to "Go to tasks", tasks_path, class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
        <div class="ml-3 inline-flex">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
        </div>
      </div>
    <% else %>
    <div class="mt-8 flex justify-center">
      <div class="inline-flex rounded-md shadow">
        <%= link_to "Login", new_user_session_path, class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
      <div class="ml-3 inline-flex">
        <%= link_to "Register", new_user_session_path, class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
